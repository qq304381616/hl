<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_layout_toolbar" />

    <TextView
        android:id="@+id/tv_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="ConstraintLayout" />

    <TextView
        android:id="@+id/tv_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="NestedScrollView" />

    <TextView
        android:id="@+id/tv_coordinatorlayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="coordinatorlayout" />

    <TextView
        android:id="@+id/tv_navigationview"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:text="左划抽屉菜单navigationview" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="46dp" />

    <android.support.v4.view.ViewPager xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>
