<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sensor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="传感器" />

            <TextView
                android:id="@+id/tv_create_alarm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="闹钟" />

            <TextView
                android:id="@+id/tv_start_timer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="定时器" />

            <TextView
                android:id="@+id/tv_show_alarms"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="显示所有闹钟" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="日历事件" />

            <TextView
                android:id="@+id/camera1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="调用照相" />

            <TextView
                android:id="@+id/camera2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="camera2 预览和拍照" />

            <TextView
                android:id="@+id/tv_applist"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="应用列表" />

            <TextView
                android:id="@+id/tv_vibrator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="震动" />

            <CheckBox
                android:enabled="false"
                android:id="@+id/cb_headset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="是否插入耳机" />

            <CheckBox
                android:id="@+id/cb_wakelock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="屏幕常亮" />

            <TextView
                android:id="@+id/tv_contacts"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="通讯录列表" />

            <TextView
                android:id="@+id/tv_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="打开相册选择照片" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_screen_landscape"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="横屏" />

                <TextView
                    android:id="@+id/tv_screen_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="竖屏" />

                <TextView
                    android:id="@+id/tv_screen_sensor"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="支持旋转" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_vibrate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="震动" />

            <TextView
                android:id="@+id/tv_text_to_speech"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="文字转语音" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="短信收发" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="视频播放器" />

            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="通知" />

            <TextView
                android:id="@+id/tv_path"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="存储" />

            <TextView
                android:id="@+id/tv_explorer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="文件管理器" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>