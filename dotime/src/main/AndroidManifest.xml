<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hl.dotime">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:label="dotime"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.ModifyTaskActivity"
            android:label="分类管理"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.ModifyGroupActivity"
            android:label="分组管理"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />
        <activity
            android:name=".ui.TaskDetailsActivity"
            android:label="任务"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden|stateUnchanged" />
        <activity
            android:name=".ui.TaskManagerActivity"
            android:label="任务管理"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.TimerManagerActivity"
            android:label="时间管理"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.filter.FilterCountActivity"
            android:label="筛选统计"
            android:theme="@style/AppTheme" />
    </application>
</manifest>